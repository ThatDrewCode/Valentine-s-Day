  <meta charset="UTF-8" />
  <!-- Import a romantic Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;700&display=swap" rel="stylesheet">
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Will You Be My Valentine? üíñ</title>
  <style>
    /* ---------------- Base & Layout Styles ---------------- */
    body {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      background: linear-gradient(135deg, #ff99cc 0%, #ff6699 100%);
      font-family: 'Dancing Script', cursive, sans-serif;
      margin: 0;
      padding: 20px;
      transition: background 0.5s ease;
      overflow: hidden;
      position: relative;
    }
    h1 {
      color: #fff;
      text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
      margin-bottom: 40px;
      font-size: 2.5em;
      animation: pulse 2s infinite;
    }
    .button-container {
      position: relative;
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
    }
    button {
      font-size: 24px;
      padding: 20px 40px;
      border: none;
      border-radius: 50px;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }
    #yesBtn {
      background: linear-gradient(45deg, #ff3366, #ff6699);
      color: white;
      transform: scale(1);
    }
    #yesBtn:hover {
      transform: scale(1.1) rotate(-5deg);
      box-shadow: 0 8px 25px rgba(255,51,102,0.4);
    }
    #noBtn {
      background: linear-gradient(45deg, #66b3ff, #3399ff);
      color: white;
      transition: all 0.2s ease;
      position: static;
    }
    #message {
      margin-top: 30px;
      font-size: 32px;
      color: white;
      text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }
    /* ---------------- Animated Background Hearts ---------------- */
    .hearts {
      position: fixed;
      width: 100%;
      height: 100%;
      pointer-events: none;
      top: 0;
      left: 0;
    }
    .heart {
      position: absolute;
      color: #ff3366;
      font-size: 24px;
      animation: float 3s linear infinite;
      opacity: 0;
    }
    @keyframes pulse {
      0% { transform: scale(1); }
      50% { transform: scale(1.05); }
      100% { transform: scale(1); }
    }
    @keyframes float {
      0% { transform: translateY(0) rotate(0deg); opacity: 1; }
      100% { transform: translateY(-100vh) rotate(360deg); opacity: 0; }
    }
    /* ---------------- Confetti ---------------- */
    .confetti {
      position: fixed;
      width: 100%;
      height: 100%;
      pointer-events: none;
      overflow: hidden;
      top: 0;
      left: 0;
    }
    .confetti-piece {
      position: absolute;
      width: 10px;
      height: 10px;
      animation: confetti 5s linear infinite;
    }
    @keyframes confetti {
      0% { transform: translateY(0) rotate(0deg); }
      100% { transform: translateY(100vh) rotate(360deg); }
    }
    /* ---------------- Responsive & Mobile Styles ---------------- */
    @media (max-width: 600px) {
      h1 { 
        font-size: 1.8em; 
      }
      button { 
        font-size: 20px; 
        padding: 15px 30px; 
      }
      #message {
        font-size: 24px;
      }
      /* Optional: reduce the number of animated elements if needed */
    }
    /* ---------------- Easter Egg Styles ---------------- */
    #easterEggButton {
      position: fixed;
      right: 10px;
      top: 50%;
      transform: translateY(-50%);
      z-index: 1000;
      border-radius: 50%;
      background: #fff;
      color: #ff3366;
      border: none;
      padding: 10px 15px;
      cursor: pointer;
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
    #easterEggContainer {
      position: fixed;
      bottom: 20px;
      left: 20px;
      background: rgba(255,255,255,0.9);
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
      z-index: 1000;
      display: none;
    }
    #easterEggContainer input {
      font-size: 16px;
      padding: 5px;
      margin-right: 10px;
    }
    #easterEggContainer button {
      font-size: 16px;
      padding: 5px 10px;
    }
    #countdownTimer {
      font-size: 20px;
      margin-top: 10px;
      color: #ff3366;
    }
    /* ---------------- New Features ‚Äì Additional Styles ---------------- */
    .cursor-heart {
      position: fixed;
      pointer-events: none;
      width: 24px;
      height: 24px;
      transition: transform 0.3s ease-out;
    }
    .envelope {
      position: fixed;
      top: -100px;
      animation: floatEnvelope 8s linear infinite;
      opacity: 0.7;
      cursor: pointer;
    }
    @keyframes floatEnvelope {
      0% { transform: translateY(0) rotate(0deg); }
      100% { transform: translateY(100vh) rotate(360deg); }
    }
    .firework {
      position: absolute;
      width: 10px;
      height: 10px;
      border-radius: 50%;
      animation: explode 1s ease-out forwards;
    }
    @keyframes explode {
      0% { transform: scale(0); opacity: 1; }
      100% { transform: scale(20); opacity: 0; }
    }
  </style>
